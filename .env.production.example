# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================================
# Copiez ce fichier et configurez les variables dans Render

# Environment
FLASK_ENV=production
DEBUG=false
HOST=0.0.0.0

# ====================================
# SECURITY - GÉNÉRATION DE SECRETS
# ====================================
# Pour générer des secrets forts:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

SECRET_KEY=CHANGEZ_MOI_AVEC_UN_SECRET_FORT_ET_ALEATOIRE
JWT_SECRET_KEY=CHANGEZ_MOI_AVEC_UN_AUTRE_SECRET_FORT_ET_ALEATOIRE

# ====================================
# SUPER ADMIN CONFIGURATION
# ====================================
SUPER_ADMIN_LOGIN_PATH=/super-secret-login
SUPER_ADMIN_2FA_ISSUER=MySmash

# Default admin credentials (changez-les après le premier déploiement!)
DEFAULT_ADMIN_EMAIL=admin@mysmash.tn
DEFAULT_ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_NAME=Super Admin
DEFAULT_ADMIN_CREDITS=10000

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SUPER_ADMIN_LOGIN=5/minute

# ====================================
# DATABASE
# ====================================
# Option 1: SQLite (par défaut, mais données non persistantes sur Render)
# DATABASE_URL=sqlite:///./padelvar.db

# Option 2: PostgreSQL Render (Recommandé)
# Copiez l'URL depuis votre PostgreSQL Database dans Render
# DATABASE_URL=postgresql://user:password@host:port/database

# ====================================
# CORS - ORIGINES AUTORISÉES
# ====================================
# Ajoutez vos URLs frontend (séparées par des virgules)
CORS_ORIGINS=http://localhost:5173,https://votre-frontend.onrender.com

# ====================================
# BUNNY CDN (Stockage et Streaming Vidéo)
# ====================================
BUNNY_API_KEY=votre-api-key-bunny
BUNNY_STORAGE_ZONE=votre-storage-zone-name
BUNNY_STORAGE_PASSWORD=votre-storage-password
BUNNY_HOSTNAME=storage.bunnycdn.com
BUNNY_STREAM_LIBRARY_ID=votre-library-id
BUNNY_STREAM_API_KEY=votre-stream-api-key
BUNNY_CDN_HOSTNAME=votre-pull-zone.b-cdn.net

# ====================================
# EMAIL CONFIGURATION (Pour réinitialisation mot de passe, etc.)
# ====================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=votre-email@gmail.com
MAIL_PASSWORD=votre-app-password

# Nom de l'émetteur pour les emails
MAIL_DEFAULT_SENDER=MySmash <noreply@mysmash.tn>

# ====================================
# GOOGLE OAUTH (Si utilisé)
# ====================================
GOOGLE_CLIENT_ID=votre-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=votre-client-secret

# ====================================
# CREDITS SYSTEM
# ====================================
# Crédits offerts à l'inscription
WELCOME_CREDITS=100

# ====================================
# FILE STORAGE
# ====================================
# Limite taille upload (en MB)
MAX_CONTENT_LENGTH=500

# Dossiers de stockage temporaire
UPLOAD_FOLDER=/tmp/uploads
RECORDINGS_FOLDER=/tmp/recordings
TEMP_RECORDINGS_FOLDER=/tmp/temp_recordings

# ====================================
# VIDEO PROCESSING
# ====================================
# Timeout pour le traitement vidéo (en secondes)
VIDEO_PROCESSING_TIMEOUT=300

# Qualité vidéo pour les highlights
HIGHLIGHT_VIDEO_QUALITY=high

# ====================================
# MONITORING & LOGGING
# ====================================
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ====================================
# SESSION & JWT
# ====================================
# Durée de validité des tokens JWT (en heures)
JWT_ACCESS_TOKEN_EXPIRES=24
JWT_REFRESH_TOKEN_EXPIRES=168  # 7 jours

# ====================================
# AUTRES CONFIGURATIONS
# ====================================
# Timezone
TIMEZONE=Africa/Tunis

# Langue par défaut
DEFAULT_LANGUAGE=fr
